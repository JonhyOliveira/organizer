<% show_actions ||= [] %>
<% show_details ||= false %>
<% show_content ||= false %>
<% show_main_stat ||= false %>
<% link_stat ||= false %>

<% document_stat = capture do %>
    <div class="stat">
        <span class="stat-title">Document</span>
        <span class="stat-value"><%= document.name %></span>
        <span class="stat-desc">#<%= document.id %></span>
    </div>
<% end %>

<% document_stat = link_to document do %>
<%= document_stat %>
<% end if link_stat %>

<div id="<%= dom_id document %>">
    <div class="stats stats-horizontal">
        <% if show_main_stat %>
            <%= document_stat %>
        <% end %>
        <% if show_actions %>
        <div class="stat">
            <div class="stat-actions">
            <% if show_actions == true || show_actions.include?(:edit) %>
                <%= link_to edit_document_path(@document), class: "btn btn-md" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                    </svg>
                <% end %>
            <% end %>

            <% if show_actions == true || show_actions.include?(:destroy) %>
                <%= button_to @document, method: :delete, form_class: "btn btn-md btn-error", data: { turbo_confirm: "Are you sure?" } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                    </svg>
                <% end %>
            <% end %>
            </div>
        </div>
        <% end %>
    </div>
    <% if show_details %>
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Attribute</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td><strong>Title</strong></td>
                <td><%= document.title %></td>
            </tr>

            <tr>
                <td><strong>Description</strong></td>
                <td><%= document.description %></td>
            </tr>
        </tbody>
    </table>
    <% end %>
    <% if show_content %>
        <div class="divider"></div>
        <turbo-frame id="<%= dom_id document %>_content_blocks" src="<%= document_content_blocks_path(document) %>">
        </turbo-frame>
    <% end %>
</div>
