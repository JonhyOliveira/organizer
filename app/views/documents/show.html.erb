<% content_for :title, "Editing document" %>
<% id = (@document.present? && @document.id.present?) ? "##{@document.id}" : " ID N/A" %>
<div class="md:w-2/3 w-full">
    <div class="breadcrumbs text-sm">
        <ul>
            <li><%= link_to "Documents", documents_path %></li>
            <li><%= link_to "Document#{id}", @document %></li>
        </ul>
    </div>
    <div class="divider"></div>

  <%= render "form", document: @document %>
</div>
