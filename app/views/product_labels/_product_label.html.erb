<% main_product_label_stat = capture do %>
  <div class="stat">
    <span class="stat-title">Product Label</span>
    <span class="stat-value"><%= product_label.name %></span>
    <span class="stat-desc">#<%= product_label.id %></span>
  </div>
<% end %>

<% main_product_label_stat = link_to product_label_path(product_label) do %>
  <%= main_product_label_stat %>
<% end if params[:expand_product_label_info_link] %>

<div id="<%= dom_id product_label %>" class="flex flex-col gap-3">
  <section aria-label="Product title" class="stats stats-horizontal">
    <%= main_product_label_stat %>
    <% if params[:expand_product_label_actions].present? %>
      <section aria-label="Actions" class="stat">
        <div class="stat-actions">
          <%= link_to edit_product_label_path(product_label), class: "btn btn-md" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
            </svg>
          <% end %>
          <%= button_to product_label, method: :delete, form_class: "btn btn-md btn-error", data: { turbo_confirm: "Are you sure?" } do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
            </svg>
          <% end %>
          <% if params[:expand_product_label_action_show].present? %>
            <%= link_to product_label_path(product_label), class: "btn btn-md btn-info" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607ZM10.5 7.5v6m3-3h-6" />
              </svg>
            <% end %>
          <% end %>
        </div>
      </section>
    <% end %>
  </section>

  <section aria-label="Product Label"></section>
    <% if params[:expand_product_label].present? %>
        <table class="table">
          <tbody>
            <% [:energy, :fats, :saturated_fats, :carbohydrates, :sugar_carbohydrates, :protein, :salt, :weight, :volume].each do |nutrition| %>
              <tr>
                <td><%= nutrition.to_s.titlecase %></td>
                <td><%= product_label.public_send(nutrition) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </section>
    <% else %>
    <% end %>
  </section>
</div>
