<% content_for :title, "Agenda items" %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Agenda items</h1>
    <%= link_to "New agenda item", new_agenda_item_path, class: "btn btn-info" %>
  </div>

  <div class="divider"></div>

  <div id="agenda_items" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @agenda_items.any? %>
      <% @agenda_items.each do |agenda_item| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= link_to agenda_item do %>
            <%= render agenda_item %>
          <% end %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", agenda_item, class: "w-full sm:w-auto btn btn-info text-info-content" %>
            <%= button_to "Destroy", agenda_item, method: :delete, class: "w-full sm:w-auto rounded-md btn btn-error text-error-content", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No agenda items found.</p>
    <% end %>
  </div>
</div>
