<turbo-frame id="<%= dom_id content_block %>" class="flex flex-row gap-2 items-center w-full" data-controller="content-block--editing">
    <%= button_to document_content_blocks_path(document_id: content_block.document_id, content_block_id: content_block.id, placement: :after),
        data: { turbo_stream: true }, method: :post, class: "flex flex-row items-center cursor-pointer" do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="size-4">
            <path d="M8.75 3.75a.75.75 0 0 0-1.5 0v3.5h-3.5a.75.75 0 0 0 0 1.5h3.5v3.5a.75.75 0 0 0 1.5 0v-3.5h3.5a.75.75 0 0 0 0-1.5h-3.5v-3.5Z" />
        </svg>
    <% end %>
    <div class="contents">
        <%= render content_block %>
    </div>
</turbo-frame>
